<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enable_location_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:elevation="6dp"
    android:visibility="gone">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/no_location" />

    <Button
        android:id="@+id/enable_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/black"
        android:elevation="2dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Enable Location Service"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/enable_location_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="This feature requires your location.\nPlease enable location services."
        android:textStyle="bold" />
</RelativeLayout>